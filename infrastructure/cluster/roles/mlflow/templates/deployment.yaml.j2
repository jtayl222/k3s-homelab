# roles/mlflow/templates/deployment.yaml.j2
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ mlflow_release_name }}
  namespace: {{ mlflow_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mlflow
  template:
    metadata:
      labels:
        app: mlflow
    spec:
      containers:
      - name: mlflow
        image: {{ mlflow_image }}
        command:
          - /bin/bash
          - -c
          - |
            pip install mlflow boto3 && \
            mlflow server \
              --host 0.0.0.0 \
              --port 5000 \
              --backend-store-uri file:///mlflow/data \
              --default-artifact-root s3://{{ mlflow_s3_bucket }}/ \
              --serve-artifacts
        ports:
        - containerPort: 5000
        env:
        - name: MLFLOW_S3_ENDPOINT_URL
          value: "{{ minio_internal_endpoint }}"
        - name: AWS_ACCESS_KEY_ID
          value: "{{ minio_access_key }}"
        - name: AWS_SECRET_ACCESS_KEY
          value: "{{ minio_secret_key }}"
        resources:
          requests:
            memory: "{{ mlflow_memory_request }}"
            cpu: "{{ mlflow_cpu_request }}"
          limits:
            memory: "{{ mlflow_memory_limit }}"
            cpu: "{{ mlflow_cpu_limit }}"
        volumeMounts:
        - name: mlflow-data
          mountPath: /mlflow/data
      volumes:
      - name: mlflow-data
        persistentVolumeClaim:
          claimName: mlflow-data